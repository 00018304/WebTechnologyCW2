extends layout

block content
    .container
  h1 Edit Task

  form(action=`/tasks/${task._id}/edit`, method='POST')
    label(for='title') Title:
    input(type='text', name='title', value=task.title, required)

    label
      input(type='checkbox', name='completed', checked=task.completed)
      | Completed

    button(type='submit') Update